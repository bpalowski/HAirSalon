@using HairSalon.Models;
<h1>List of Specialities</h1>
<ul>
  @if (Model.Count == 0)
  {
    <p>Chose a option to button</p>
  } else
  {
    @foreach(var specialist in Model)
    {
      <li>@specialist.GetDescription()| <a href="/special/@specialist.GetId()/view">Details</a></li>
    }
  }
</ul>
<p><a href="/">Go Home</a></p>
<p><a href='/special/new'>Create a Speciality type<a/></p>
