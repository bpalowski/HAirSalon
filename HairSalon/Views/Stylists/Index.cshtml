@using HairSalon.Models;
<h1>Hello stylist</h1>
<ul>
  @if (Model.Count == 0)
  {
    <p>No stylists have been added...</p>
  } else
  {
  @foreach(var stylist in Model)
    {
    <li><a href='/stys/@stylist.GetStyId()/'>@stylist.GetStylistName()</a> | <a href="/stys/@stylist.GetStyId()/delete">Delete</a> |<a href="/stys/@stylist.GetStyId()/update">Edit</a></li>
    }
  }
</ul>
<a href='/'>Go Home</a>
